<!-- 各ページで共通の部分を記述するためのファイル -->
<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- 各ページで入力されたタイトルにしたがって動的にタイトルを出力 -->
    <title><%= yield(:title) %>
      | Math Pro</title>
    <!-- Web攻撃手法の１つであるクロスサイトリクエストフォージェリーを防ぐためのコード -->
    <%= csrf_meta_tags %>

    <!-- CSSとJavaScriptをページ内で展開するためのコード -->
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="navbar-brand"><%= link_to "sample", root_path, id: "logo" %></div>
        <ul class="navbar-nav mx-auto">
          <li class="nav-item nav-link"><%= link_to "Home", root_path %></li>
          <li class="nav-item nav-link"><%= link_to "フーリエ変換", frie_path %></li>
          <li class="nav-item nav-link"><%= link_to "ニュートン法", newton_path %></li>
        </ul>
        <ul class="navbar-nav ml-auto">
          <li class="navbar-item nav-link"><%= link_to "コンセプト", about_path %></li>
          <li class="navbar-item nav-link" style="margin-right:10px"><%= link_to "使い方", question_path %></li>
          <!-- ログインボタンの作成 -->
          <li class="navbar-text btn btn-primary"><%= link_to "ログイン", login_path %></li>
        </ul>
      </nav>
    </header>
    <div class="container">
      <!-- 各ページの内容を出力 -->
      <%= yield %>
    </div>
    <footer>
      <small>(C)2019 Math Pro.</small>
    </footer>
  </body>
</html>
