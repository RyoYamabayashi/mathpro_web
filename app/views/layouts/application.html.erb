<!-- 各ページで共通の部分を記述するためのファイル -->
<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
  	<meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- 各ページで入力されたタイトルにしたがって動的にタイトルを出力 -->
    <title><%= yield(:title) %>
      | Math Pro</title>
    <!-- Web攻撃手法の１つであるクロスサイトリクエストフォージェリーを防ぐためのコード -->
    <%= csrf_meta_tags %>

    <!-- CSSとJavaScriptをページ内で展開するためのコード -->
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body background="images/back1.gif">
    <header class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container">
        <%= link_to "sample", '#', id: "logo" %>
        <nav>
          <ul class="nav navbar-nav ml-auto">
            <li><%= link_to "Home", '#' %></li>
            <li><%= link_to "About", '#' %></li>
            <li><%= link_to "質問", '#' %></li>
            <!-- ログインボタンの作成 -->
            <li class="navbar-text btn btn-primary"><%= link_to "ログイン", '#' %></li>
          </ul>
        <nav>
      </div>
    </header>
    <div class="container">
      <nav class="navbar navbar-expand-lg navbar-dark bg-secondary">
          <!-- 右寄せのナビゲーションバーを作成 -->
          <ul class="navbar-nav mr-auto">
            <li class="nav-item active">
              <a class="nav-link" href="index.html">ホーム<span class="sr-only">(current)</span></a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="frie.html">フーリエ変換</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="deep.html">ディープラーニング</a>
            </li>
          </ul>
        </div>
      </nav>
      <!-- 各ページの内容を出力 -->
      <%= yield %>
    </div>
  </body>
</html>
