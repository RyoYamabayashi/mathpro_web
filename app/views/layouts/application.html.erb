<!-- 各ページで共通の部分を記述するためのファイル -->
<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- 各ページで入力されたタイトルにしたがって動的にタイトルを出力 -->
    <title><%= yield(:title) %>
      | Math Pro</title>
    <!-- Web攻撃手法の１つであるクロスサイトリクエストフォージェリーを防ぐためのコード -->
    <%= csrf_meta_tags %>

    <!-- CSSとJavaScriptをページ内で展開するためのコード -->
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body background="images/back1.gif">
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <%= link_to "sample", root_path, id: "logo" %>
        <ul class="navbar-nav ml-auto">
          <li class="navbar-text"><%= link_to "Home", root_path %></li>
          <li class="navbar-text"><%= link_to "About", about_path %></li>
          <li class="navbar-text"><%= link_to "質問", question_path %></li>
          <!-- ログインボタンの作成 -->
          <li class="navbar-text btn btn-primary"><%= link_to "ログイン", login_path %></li>
        </ul>
      </nav>
    </header>
    <nav class="navbar navbar-expand-lg navbar-light bg-secondary">
      <!-- 右寄せのナビゲーションバーを作成 -->
      <ul class="navbar-nav mr-auto">
        <li class="nav-item"><%= link_to "Home", root_path %></li>
        <li class="nav-item"><%= link_to "フーリエ変換", frie_path %></li>
        <li class="nav-item"><%= link_to "ニュートン法", newton_path %></li>
      </ul>
    </nav>
    <div class="container">
      <!-- 各ページの内容を出力 -->
      <%= yield %>
    </div>
    <footer>
      <small>(C)2019 Math Pro.</small>
    </footer>
  </body>
</html>
